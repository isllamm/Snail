<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tawajood.snail.ui.main.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
        <action
            android:id="@+id/action_homeFragment_to_enableGpsSheet"
            app:destination="@id/enableGpsSheet" />
        <action
            android:id="@+id/action_homeFragment_to_searchSheet"
            app:destination="@id/searchSheet" />
    </fragment>
    <fragment
        android:id="@+id/storeFragment"
        android:name="com.tawajood.snail.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" />
    <fragment
        android:id="@+id/myConsultantsFragment"
        android:name="com.tawajood.snail.MyConsultantsFragment"
        android:label="fragment_my_consultants"
        tools:layout="@layout/fragment_my_consultants" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.tawajood.snail.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.tawajood.snail.ui.main.fragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <dialog
        android:id="@+id/enableGpsSheet"
        android:name="com.tawajood.snail.ui.main.fragments.EnableGpsSheet"
        android:label="sheet_enable_gps"
        tools:layout="@layout/sheet_enable_gps" />
    <dialog
        android:id="@+id/searchSheet"
        android:name="com.tawajood.snail.ui.main.fragments.SearchSheet"
        android:label="fragment_search_sheet"
        tools:layout="@layout/fragment_search_sheet" >
        <action
            android:id="@+id/action_searchSheet_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
    </dialog>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.tawajood.snail.ui.main.fragments.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result" />
</navigation>