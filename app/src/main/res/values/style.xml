<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Snail" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/light_beige</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:secondaryProgressTint">@color/beige</item>
        <item name="android:progressTint">@color/beige</item>
        <item name="strokeColor">@color/beige</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogThemeCalender" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/brown</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/radio_btn</item>
    </style>
    <style name="SCBSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/brown</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/brown</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>